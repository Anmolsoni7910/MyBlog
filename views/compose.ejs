<%- include("partials/header"); -%>

<h1>Compose</h1>

<form action="/compose" method="post">
    <div class="mt-3 mb-2">
        <label class="form-label" for="title"><strong>Title</strong></label>
        <input type="text" class="form-control" id="title" name="formTitle" autocomplete="off"> 
    </div>
    <div class="mt-2 mb-2">
        <label class="from-label" for="post"><strong>Post</strong></label>
        <textarea class="form-control" id="post" rows="5" name="formPost" autocomplete="off"></textarea>
    </div>

    <button type="submit" class="btn btn-primary mt-2 ms-3 btn-lg">Publish</button>
</form>

<%- include("partials/footer"); -%>