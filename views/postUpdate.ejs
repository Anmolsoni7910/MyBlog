<%- include("partials/header"); -%>

<form action="/updatedPost" method="post">
    <div class="mt-3 mb-2">
        <label class="form-label" for="title"><strong>Title</strong></label>
        <input class="form-control" id="title" name="postTitle" value="<%= newTitle %>" autocomplete="off">
    </div>
    <div class="mt-2 mb-2">
        <label class="form-label" for="post"><strong>Post</strong></label>
        <textarea class="form-control" id="post" name="postPost" rows="5" autocomplete="off"><%= newPost%></textarea>
    </div>
    <button type="submit" class="btn btn-success btn-lg mt-2">UPDATE</button>
</form>

<%- include("partials/footer"); -%>